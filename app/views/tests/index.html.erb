<h1 class="mt-4"><%= t('tests.index.header') %></h1>

<table class="table table-striped table-hover">
  <thead class="tests-header">
  <tr>
    <th scope="col" class="sort-by-title pointer">
      <%= t('.title') %>
      <%= octicon 'arrow-up', class: 'text-success hide' %>
      <%= octicon 'arrow-down', class: 'text-success hide' %>
    </th>
    <th scope="col"><%= t('.level') %></th>
    <th scope="col"><%= t('.category') %></th>
    <th scope="col"><%= t('.questions_count') %></th>
    <th scope="col"><%= t('.author') %></th>
    <th scope="col"><%= t('.actions') %></th>
  </tr>
  </thead>
  <tbody>
  <%= render @tests %>
  </tbody>
</table>
