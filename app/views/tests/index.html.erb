<h1>Tests</h1>

<table>
  <thead>
  <tr>
    <th>Title</th>
    <th>Level</th>
    <th>Category</th>
    <th>Total questions</th>
    <th>Author</th>
    <th colspan="2">Action</th>
  </tr>
  </thead>
  <tbody>
  <% @tests.each do |test| %>
    <tr>
      <td><a href="<%=test_path(test) %>"><%= test.title %></a></td>
      <td><%= test.level %></td>
      <td><%= test.category.title %></td>
      <td><%= test.questions.count %></td>
      <td><%= test.author.login %></td>
      <td><%= button_to 'Delete', test, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <td><%= button_to 'Edit', edit_test_path(test) %></td>
    </tr>
  <% end %>
  </tbody>
</table>