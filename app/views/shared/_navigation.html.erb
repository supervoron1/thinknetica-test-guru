<%= link_to 'TestGuru', root_path, class: 'nav link' %>
<% if logged_in? %>
  <%= link_to 'LogOut', logout_path, method: :delete, class: 'nav link' %>
  <p class="nav user">Welcome, <b><%= current_user.login %></b> Guru</p>
<% else %>
  <%= link_to 'Registration', signup_path, class: 'nav link' %>
  <%= link_to 'Login', login_path, class: 'nav link' %>
<% end %>