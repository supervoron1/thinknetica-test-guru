<%= form_with model: [:admin, @test], local: true do |form| %>
  <%= render 'shared/errors', resource: @test %>

  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title, id: :test_title %>
  </div>

  <div class="mt-1">
    <%= form.label :level %><br>
    <%= form.number_field :level, id: :test_level %>
  </div>

  <div class="mt-1">
    <%= form.label :category_id %><br>
    <%= form.collection_select :category_id, Category.all, :id, :title, :prompt => I18n.t('helpers.select.prompt') %>
  </div>

  <!--unnecessarily-->
<!--  <%#= form.hidden_field :author_id, value: current_user.id %><br>-->

  <div class="mt-3">
    <%= form.submit %>
    <%= link_to t('.back_to_tests'), admin_tests_path %>
  </div>
<% end %>
